<Window x:Class="WpfApp1.Edit.EditStatusEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Edit"
        mc:Ignorable="d"
        Title="Изменить статус сотрудника" Height="188.325" Width="309.282" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Label Style="{StaticResource labels}" Content="Статус" Margin="47,20,0,0" Width="60"/>
        <ComboBox Style="{StaticResource comboBox}" SelectedValuePath="ID" DisplayMemberPath="Name" x:Name="ComboBoxStatus" Margin="47,51,0,0" Width="208" Height="26"/>
        <Button Style="{StaticResource button}" x:Name="ButtonEdit" Click="ButtonEdit_Click" Content="Изменить" Margin="14,0,0,16" VerticalAlignment="Bottom" Width="81"/>
        <Button Style="{StaticResource button}" x:Name="Cancel" Click="Cancel_Click" Content="Отмена" Margin="0,0,16,16" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="86"/>

    </Grid>
</Window>
