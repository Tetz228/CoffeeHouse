<Window x:Class="WpfApp1.CashOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Приходно-кассовый ордер" Height="461" Width="1010" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Label Style="{StaticResource labels}" x:Name="PaymentType" Content="Тип оплаты: " Margin="10,0,0,10" Width="266" VerticalAlignment="Bottom"/>
        <Label Style="{StaticResource labels}" x:Name="TotalSum"  Content="Итоговая сумма: " Margin="290,0,0,10" Width="491" Height="27" VerticalAlignment="Bottom"/>
        <Button Style="{StaticResource button}" x:Name="ButtonOK" Click="ButtonOK_Click" Content="ОК" HorizontalAlignment="Right" Margin="0,0,10,10" Width="75" Height="31"/>
        <ContentControl x:Name="MainControl" HorizontalAlignment="Left" VerticalAlignment="Top" Height="376" Width="1004"/>
    </Grid>
</Window>
